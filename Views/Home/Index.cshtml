
@{
    ViewBag.Title = "Index";
}



<div class="row" style="margin-top: 60px;">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Iniciar Sesión</div>
            <div class="panel-body">
                <form method="post" action="@Url.Action("Iniciar", "Home")">
                    <div class="form-group">
                        <label for="uxu">Correo:</label>
                        <input type="text" name="uxu" id="uxu" tabindex="1" class="form-control" placeholder="juan.perez@algo.com" required maxlength="100">
                    </div>
                    <div class="form-group">
                        <label for="c0m">Contraseña:</label>
                        <input type="password" name="c0m" id="c0m" tabindex="2" class="form-control" placeholder="Contraseña" required maxlength="20">
                    </div>

                    <button type="submit" class="btn btn-default">Entrar</button>
                    @if (ViewBag.error == 1)
                    {
                        <br />
                        <span class="AlertaDanger">Error al Iniar sesión, revise usuario y contraseña</span>
                    }
                </form>

            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>


