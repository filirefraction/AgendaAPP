@model IEnumerable<AgendaSalas.Models.Usuarios>

@{
    ViewBag.Title = "Usuarios";
}

<h3>Administración de Usuarios</h3>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-6">
            <a href="@Url.Action("Create", "Usuarios")" data-toggle="tooltip" title="Nuevo Usuario" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> Nuevo
            </a>
        </div>
        <div class="col-md-5"></div>
        <div class="col-md-1">
            <a href="@Url.Action("Menu", "Home")" data-toggle="tooltip" title="Volver al Menu" class="btn btn-default">
                <span class="glyphicon glyphicon-step-backward"></span> Atras
            </a>
        </div>
    </div>
</div>


<table id="usuariostab" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioNumeroExt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioApellido1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioApellido2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpleadoEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioNumeroExt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioApellido1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioApellido2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpleadoEmail)
                </td>
                <td>
                    ********
                </td>
                <td>
                    @if (item.Tipo == 1)
                    {
                        <p>Administrador</p>
                    }
                    else
                    {
                        <p>Usuario</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Usuarios", new { id = item.IDUsuario })" data-toggle="tooltip" title="Editar Usuario" class="btn btn-default">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a href="@Url.Action("Details", "Usuarios", new { id = item.IDUsuario })" data-toggle="tooltip" title="Detalles de Usuario" class="btn btn-default">
                        <span class="glyphicon glyphicon-info-sign"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Usuarios", new { id = item.IDUsuario })" data-toggle="tooltip" title="Eliminar Usuario" class="btn btn-default">
                        <span class="glyphicon glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#usuariostab').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
            },
            scrollY: '50vh',
            scrollCollapse: true,
            paging: false
        });
    });
</script>
