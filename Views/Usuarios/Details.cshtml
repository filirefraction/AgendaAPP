@model AgendaSalas.Models.Usuarios

@{
    ViewBag.Title = "Usuarios";
}

<div class="form-group">
    <div class="col-md-6">
        <h4>Detalles de Usuario</h4>
    </div>
    <div class="col-md-5"></div>
    <div class="col-md-1">
        <a href="@Url.Action("Index", "Usuarios")" data-toggle="tooltip" title="Volver al Menu" class="btn btn-default">
            <span class="glyphicon glyphicon-step-backward"></span> Atras
        </a>
    </div>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UsuarioNumeroExt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioNumeroExt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioNombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioNombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioApellido1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioApellido1)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UsuarioApellido2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UsuarioApellido2)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EmpleadoEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmpleadoEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pass)
        </dt>

        <dd>
            *******
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>

        <dd>
            @if (Model.Tipo == 1)
            {
                <p>Administrador</p>
            }
            else
            {
                <p>Usuario</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estatus)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IDUsuario })
